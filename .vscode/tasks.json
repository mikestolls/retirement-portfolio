{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "npm",
            "script": "start",
            "path": "frontend/",
            "label": "npm: start - frontend",
            "isBackground": true,
            "problemMatcher": {
                "owner": "webpack",
                "pattern": {
                    "regexp": "ERROR in (.*)",
                    "file": 1
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "webpack: Compiling...",
                    "endsPattern": "webpack: Compiled successfully."
                }
            }
        }
    ]
}